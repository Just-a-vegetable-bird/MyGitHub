<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80.0dip"
    android:background="#ffffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/bookroom_group_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bookroom_group_img"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_margin="5dp"
            android:src="@drawable/oracle" />

        <View
            android:layout_width="2.0dip"
            android:layout_height="50.0dip"
            android:layout_marginBottom="15.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_marginTop="15.0dip"
            android:background="#ffefefef" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bookroom_group_ll"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bookroom_group_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_orange_count"
            android:text="25" />

        <TextView
            android:id="@+id/bookroom_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="工业技术"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/bookroom_group_desc"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="13.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toLeftOf="@id/bookroom_group_ll"
        android:layout_toRightOf="@id/bookroom_group_ll1"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="android应用开发实战"
        android:textSize="12sp" />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="9.0dip"
            android:background="#ffefefef" />

</RelativeLayout>